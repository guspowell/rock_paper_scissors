<div class="outcome">

<div class="vs">
		<div class="player-choice">
		<% if @choice == :rock %>
			<img src= "/images/rock.jpg">
		<% elsif @choice == :paper %>
			<img src= "/images/paper.jpg">
		<% else @choice == :scissors %>
			<img src= "/images/scissors.jpg">
		<% end %>
	</div>

	<div class="computer-choice">
		<% if @comp_choice == :rock %>
			<img src= "/images/rock.jpg">
		<% elsif @comp_choice == :paper %>
			<img src= "/images/paper.jpg">
		<% else @comp_choice == :scissors %>
			<img src= "/images/scissors.jpg">
		<% end %>
	</div>

	<div class="win-lose">
		<% if @outcome == 'Win' %>
			<img src= "/images/win.jpg">
		<% elsif @outcome == 'Lose' %>
			<img src= "/images/lose.jpg">
		<% else @outcome == 'Draw' %>
			<img src= "/images/draw.jpg">
		<% end %>
	</div>

	<div id="option" class="play-again">
			<a href="choice"><img src= "/images/play_again.jpg"></a>
	</div>

</div>

<div class="score">
	<div class="player-score">
		<h2 id="name"><%= @name %></h2>
		<h2 id="score"><%= @player_score %></h2>
	</div>
	<div class="comp-score">
		<h2 id="score"><%= @comp_score %></h2>
		<h2 id="name">cpu</h2>
	</div>
</div>
